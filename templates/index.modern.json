{
  "sections": {
    "modern_hero_banner": {
      "type": "modern-hero",
      "settings": {
        "background_gradient": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
        "parallax_speed": 3,
        "overlay_gradient": "linear-gradient(180deg, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.45) 100%)",
        "overlay_opacity": 100,
        "subheading": "Welcome to our store",
        "heading": "Discover <em>Amazing</em> Products",
        "description": "Explore our curated collection of premium products designed with love and attention to detail.",
        "heading_size": 5,
        "subheading_size": 1.4,
        "text_color": "#ffffff",
        "content_alignment": "center",
        "button_label": "Shop Now",
        "button_label_2": "Learn More",
        "min_height": 100,
        "show_scroll_indicator": true,
        "padding_top": 0,
        "padding_bottom": 0
      }
    },
    "modern_trust_section": {
      "type": "modern-trust-badges",
      "blocks": {
        "badge_shipping": {
          "type": "badge",
          "settings": {
            "icon": "shipping",
            "title": "Free Shipping",
            "text": "On orders over $50"
          }
        },
        "badge_secure": {
          "type": "badge",
          "settings": {
            "icon": "shield",
            "title": "Secure Payments",
            "text": "256-bit encryption"
          }
        },
        "badge_returns": {
          "type": "badge",
          "settings": {
            "icon": "return",
            "title": "Easy Returns",
            "text": "30-day return policy"
          }
        },
        "badge_quality": {
          "type": "badge",
          "settings": {
            "icon": "heart",
            "title": "Made with Love",
            "text": "Premium quality"
          }
        }
      },
      "block_order": [
        "badge_shipping",
        "badge_secure",
        "badge_returns",
        "badge_quality"
      ],
      "settings": {
        "title": "Why choose us",
        "color_scheme": "background-1",
        "padding_top": 52,
        "padding_bottom": 52
      }
    },
    "modern_featured_products": {
      "type": "modern-featured-collection",
      "settings": {
        "title": "Featured Collection",
        "description": "Handpicked products just for you",
        "products_to_show": 4,
        "columns_desktop": 4,
        "columns_mobile": 2,
        "color_scheme": "background-1",
        "show_vendor": false,
        "show_view_all": true,
        "padding_top": 40,
        "padding_bottom": 52
      }
    },
    "modern_image_text": {
      "type": "modern-image-with-text",
      "blocks": {
        "feat_1": {
          "type": "feature",
          "settings": {
            "feature_title": "Premium Quality",
            "feature_text": "Crafted with the finest materials"
          }
        },
        "feat_2": {
          "type": "feature",
          "settings": {
            "feature_title": "Unique Designs",
            "feature_text": "Stand out with original creations"
          }
        },
        "feat_3": {
          "type": "feature",
          "settings": {
            "feature_title": "Eco-Friendly",
            "feature_text": "Sustainable and responsibly made"
          }
        }
      },
      "block_order": ["feat_1", "feat_2", "feat_3"],
      "settings": {
        "image_position": "left",
        "label": "About Us",
        "title": "Crafted with <em>passion</em> and purpose",
        "text": "We believe in creating products that make a difference. Every detail is carefully considered to ensure the highest quality.",
        "button_label": "Learn More",
        "color_scheme": "background-1",
        "padding_top": 40,
        "padding_bottom": 52
      }
    },
    "modern_newsletter_cta": {
      "type": "modern-newsletter",
      "settings": {
        "heading": "Stay in the loop",
        "description": "Subscribe for exclusive offers, new arrivals, and insider updates delivered straight to your inbox.",
        "button_label": "Subscribe",
        "background_gradient": "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
        "text_color": "#ffffff",
        "button_bg": "#ffffff",
        "button_text": "#000000",
        "padding_top": 60,
        "padding_bottom": 60
      }
    }
  },
  "order": [
    "modern_hero_banner",
    "modern_trust_section",
    "modern_featured_products",
    "modern_image_text",
    "modern_newsletter_cta"
  ]
}
