{%- comment -%}
  Modern Collection Banner
  ========================
  Parallax banner for collection pages with title, description, and product count.
{%- endcomment -%}

{%- style -%}
  .modern-collection-banner--{{ section.id }} {
    min-height: {{ section.settings.min_height }}vh;
    position: relative;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    overflow: hidden;
    color: #fff;
  }

  .modern-collection-banner--{{ section.id }} .modern-collection-banner__overlay {
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="modern-collection-banner modern-collection-banner--{{ section.id }} section-{{ section.id }}-padding">
  <div class="modern-collection-banner__bg parallax-container">
    {%- if collection.image -%}
      {{ collection.image | image_url: width: 3840 | image_tag:
        class: 'parallax-bg modern-img',
        alt: collection.image.alt | default: collection.title,
        widths: '750, 1100, 1500, 1920, 2560, 3840',
        sizes: '100vw',
        loading: 'eager',
        fetchpriority: 'high',
        data-parallax: section.settings.parallax_speed,
        style: 'position:absolute;inset:0;width:100%;height:100%;object-fit:cover'
      }}
    {%- else -%}
      <div class="parallax-bg" style="background:var(--gradient-primary);position:absolute;inset:0"></div>
    {%- endif -%}
  </div>

  <div class="modern-collection-banner__overlay" style="position:absolute;inset:0;background:linear-gradient(180deg,rgba(0,0,0,0.1) 0%,rgba(0,0,0,0.6) 100%);z-index:1"></div>

  <div class="page-width" style="position:relative;z-index:2;width:100%;padding:var(--space-3xl) 0">
    <div class="modern-collection-banner__content modern-animate animate--fade-up" style="text-align:center">
      <h1 style="font-size:var(--text-4xl);font-weight:700;margin:0;letter-spacing:var(--tracking-tight);line-height:var(--leading-tight)">
        {{ collection.title | escape }}
      </h1>

      {%- if section.settings.show_description and collection.description != blank -%}
        <div style="font-size:var(--text-lg);opacity:0.85;margin-top:var(--space-md);max-width:60ch;margin-inline:auto">
          {{ collection.description }}
        </div>
      {%- endif -%}

      {%- if section.settings.show_product_count -%}
        <p class="modern-animate animate--fade-up" data-stagger="2" style="font-size:var(--text-sm);opacity:0.7;margin-top:var(--space-sm);text-transform:uppercase;letter-spacing:var(--tracking-widest)">
          {{ collection.products_count }} {{ collection.products_count | pluralize: 'product', 'products' }}
        </p>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Modern Collection Banner",
  "tag": "section",
  "class": "section-modern-collection-banner",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_description",
      "default": true,
      "label": "Show collection description"
    },
    {
      "type": "checkbox",
      "id": "show_product_count",
      "default": true,
      "label": "Show product count"
    },
    {
      "type": "range",
      "id": "parallax_speed",
      "min": 0,
      "max": 10,
      "step": 1,
      "default": 3,
      "label": "Parallax speed",
      "info": "0 = disabled"
    },
    {
      "type": "range",
      "id": "min_height",
      "min": 20,
      "max": 80,
      "step": 5,
      "default": 40,
      "unit": "vh",
      "label": "Minimum height"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 60,
      "unit": "%",
      "label": "Overlay opacity"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 0,
      "unit": "px",
      "label": "Padding top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 0,
      "unit": "px",
      "label": "Padding bottom"
    }
  ],
  "presets": [
    {
      "name": "Modern Collection Banner"
    }
  ]
}
{% endschema %}
