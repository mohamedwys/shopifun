<style>
  body {
    overflow: hidden;
    height: 100vh;
  }

  .template-404 {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    text-align: center;
    isolation: isolate;
    margin: 0;
    padding: 0;
  }

  .template-404__bg {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: clamp(12rem, 30vw, 36rem);
    font-weight: 800;
    color: rgba(0, 0, 0, 0.04);
    pointer-events: none;
    user-select: none;
    z-index: 1;
  }

  .template-404__content {
    position: relative;
    z-index: 2;
    max-width: 420px;
    padding: 2rem;
  }

  .template-404__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    pointer-events: none;
    overflow: hidden;
    display: block;
  }

  .template-404__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
    opacity: 0.7;
  }

  .template-404 h1 {
    margin: 0 0 0.5rem;
  }

  .template-404 p {
    margin: 0 0 2rem;
    opacity: 0.7;
  }
</style>

<div class="template-404">
  <!-- Background image -->
  {%- if section.settings.image != blank -%}
    <div class="template-404__image">
      <img
        src="{{ section.settings.image | image_url: width: 1920 }}"
        srcset="{{ section.settings.image | image_url: width: 768 }} 768w,
                {{ section.settings.image | image_url: width: 1024 }} 1024w,
                {{ section.settings.image | image_url: width: 1920 }} 1920w"
        sizes="100vw"
        alt="{{ section.settings.image.alt | default: 'Page not found' | escape }}"
        loading="eager"
        width="{{ section.settings.image.width }}"
        height="{{ section.settings.image.height }}"
      >
    </div>
  {%- endif -%}

  <!-- Big background 404 -->
  <div class="template-404__bg">404</div>

  <!-- Foreground content -->
  <div class="template-404__content">

    <h1 class="title">
      Oops! We’re a little lost
    </h1>

    <p>
      The page you’re looking for doesn’t exist. Let’s get you back on track.
    </p>

    <a href="{{ routes.root_url }}" class="button">
      Back to home
    </a>

  </div>
</div>

{% schema %}
{
  "name": "404 Page",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "404 Image",
      "info": "Optional image to display on the 404 page"
    },
    {
      "type": "header",
      "content": "Image Size"
    },
    {
      "type": "range",
      "id": "image_width",
      "label": "Image Width (%)",
      "min": 20,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 80,
      "info": "Width of the image as a percentage of the container"
    },
    {
      "type": "range",
      "id": "image_max_width",
      "label": "Maximum Width (px)",
      "min": 200,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "default": 600,
      "info": "Maximum width in pixels (prevents image from getting too large)"
    },
    {
      "type": "range",
      "id": "image_height",
      "label": "Image Height (px)",
      "min": 0,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "default": 0,
      "info": "Fixed height in pixels (0 = auto, maintains aspect ratio)"
    },
    {
      "type": "range",
      "id": "image_radius",
      "label": "Border Radius (px)",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "default": 32,
      "info": "Border radius for rounded corners (0 = square)"
    }
  ]
}
{% endschema %}
