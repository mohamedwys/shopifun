{%- comment -%}
  Modern Featured Collection Section
  ===================================
  Displays a collection of products in a modern grid with stagger animations,
  scroll reveal effects, and the modern product card component.
{%- endcomment -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .modern-featured__header {
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
    gap: var(--space-lg);
    margin-bottom: var(--space-2xl);
    flex-wrap: wrap;
  }

  .modern-featured__title {
    font-size: var(--text-3xl);
    font-weight: 700;
    line-height: var(--leading-tight);
    margin: 0;
    letter-spacing: var(--tracking-tight);
  }

  .modern-featured__description {
    font-size: var(--text-base);
    opacity: 0.65;
    margin: var(--space-xs) 0 0;
    max-width: 50ch;
  }

  .modern-featured__view-all {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-sm);
    font-weight: 600;
    color: inherit;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    white-space: nowrap;
    transition: opacity var(--duration-fast) var(--ease-out);
  }

  .modern-featured__view-all:hover {
    opacity: 0.7;
  }

  .modern-featured__view-all svg {
    width: 16px;
    height: 16px;
    transition: transform var(--duration-fast) var(--ease-out);
  }

  .modern-featured__view-all:hover svg {
    transform: translateX(4px);
  }

  .modern-featured__grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
    gap: var(--space-md);
  }

  @media screen and (min-width: 750px) {
    .modern-featured__grid {
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
      gap: var(--space-xl);
    }
  }

  .modern-featured__empty {
    text-align: center;
    padding: var(--space-4xl) var(--space-xl);
    opacity: 0.5;
  }
{%- endstyle -%}

{%- liquid
  assign products_to_show = section.settings.products_to_show
  assign collection = section.settings.collection
-%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding" id="ModernCollection-{{ section.id }}">
    {%- comment -%} Header {%- endcomment -%}
    <div class="modern-featured__header">
      <div>
        {%- if section.settings.title != blank -%}
          <h2 class="modern-featured__title modern-animate animate--fade-up">
            {{ section.settings.title }}
          </h2>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <p class="modern-featured__description modern-animate animate--fade-up" data-stagger="2">
            {{ section.settings.description | escape }}
          </p>
        {%- endif -%}
      </div>
      {%- if collection != blank and section.settings.show_view_all -%}
        <a href="{{ collection.url }}" class="modern-featured__view-all modern-animate animate--fade-up" data-stagger="2">
          {{ 'sections.featured_collection.view_all' | t | default: 'View all' }}
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      {%- endif -%}
    </div>

    {%- comment -%} Product Grid {%- endcomment -%}
    {%- if collection != blank and collection.products_count > 0 -%}
      <div class="modern-featured__grid">
        {%- for product in collection.products limit: products_to_show -%}
          {%- render 'modern-product-card',
            product: product,
            index: forloop.index,
            show_vendor: section.settings.show_vendor,
            animation: 'animate--fade-up'
          -%}
        {%- endfor -%}
      </div>
    {%- elsif collection == blank -%}
      {%- comment -%} Placeholder cards for theme editor {%- endcomment -%}
      <div class="modern-featured__grid">
        {%- for i in (1..products_to_show) -%}
          <div
            class="modern-product-card modern-animate animate--fade-up"
            data-stagger="{{ forloop.index | at_most: 8 }}"
          >
            <div class="modern-product-card__media">
              {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
            </div>
            <div class="modern-product-card__info">
              <h3 class="modern-product-card__title">
                <a href="#">{{ 'onboarding.product_title' | t }}</a>
              </h3>
              <div class="modern-product-card__price">
                <span>{{ 1999 | money }}</span>
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- else -%}
      <div class="modern-featured__empty">
        <p>{{ 'sections.featured_collection.no_products' | t | default: 'No products in this collection.' }}</p>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Modern Featured Collection",
  "tag": "section",
  "class": "section-modern-featured-collection",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Heading",
      "default": "Featured Collection"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 4,
      "label": "Desktop columns"
    },
    {
      "type": "range",
      "id": "columns_mobile",
      "min": 1,
      "max": 2,
      "step": 1,
      "default": 2,
      "label": "Mobile columns"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
      "type": "header",
      "content": "Display Options"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "Show vendor"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Show 'View all' link"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40,
      "unit": "px",
      "label": "Padding top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 52,
      "unit": "px",
      "label": "Padding bottom"
    }
  ],
  "presets": [
    {
      "name": "Modern Featured Collection"
    }
  ]
}
{% endschema %}
