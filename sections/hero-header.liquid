<script>
  (function() {
    const sectionId = '{{ section_id }}';
    const sectionShopifyId = '{{ section.id }}';
    const sectionEl = document.querySelector('.hero-header-' + sectionId);
    if (!sectionEl) return;

    document.body.classList.add('boo-hero-header-overlay');

    const ac = new AbortController();

    const header = sectionEl.querySelector('.hero-header-' + sectionId + '__header');

    function syncHeaderOffset() {
      if (!header) return;
      const h = Math.ceil(header.getBoundingClientRect().height || 0);
      document.documentElement.style.setProperty('--header-height', (h || 72) + 'px');
    }

    syncHeaderOffset();
    window.addEventListener('resize', syncHeaderOffset, { signal: ac.signal });

    // Ensure current page link has .is-active (for glassy style); Liquid link.active can miss in some cases
    (function setActiveMenuLink() {
      var pill = sectionEl.querySelector('.hero-header-' + sectionId + '__header-pill');
      if (!pill) return;
      var path = window.location.pathname.replace(/\/$/, '') || '/';
      var links = pill.querySelectorAll('a[class*="__menu-link"]');
      var bestMatch = null;
      links.forEach(function(a) {
        a.classList.remove('is-active');
        var href = (a.getAttribute('href') || '').split('?')[0];
        if (!href || href.indexOf('/') !== 0) return;
        var linkPath = href.replace(/\/$/, '') || '/';
        if (path === linkPath) bestMatch = a;
        else if (!bestMatch && path.indexOf(linkPath + '/') === 0) bestMatch = a;
      });
      if (bestMatch) bestMatch.classList.add('is-active');
    })();
    
    // Toggle .is-stuck when scrolling
    function onScroll() {
      if (!header) return;
      header.classList.toggle('is-stuck', window.scrollY > 10);
    }
    onScroll();
    window.addEventListener('scroll', onScroll, { passive: true, signal: ac.signal });
    
    function initMobileMenu() {
      // Try multiple selector strategies
      let menuToggle = document.querySelector('[id="mobile-nav-' + sectionId + '"]')?.previousElementSibling?.querySelector('[class*="__menu-toggle"]');
      
      if (!menuToggle) {
        menuToggle = document.querySelector('[aria-controls="mobile-nav-' + sectionId + '"]');
      }
      
      if (!menuToggle) {
        menuToggle = document.querySelector('[class*="hero-header-"][class*="__menu-toggle"]');
      }
      
      if (!menuToggle) {
        console.error('Hero header: Menu toggle button not found');
        return;
      }
      
      const mobileNavId = menuToggle.getAttribute('aria-controls');
      if (!mobileNavId) {
        console.error('Hero header: Mobile nav ID not found');
        return;
      }
      
      const mobileNav = document.getElementById(mobileNavId);
      if (!mobileNav) {
        console.error('Hero header: Mobile nav element not found');
        return;
      }

      // Ensure mobile nav starts hidden
      mobileNav.setAttribute('aria-hidden', 'true');
      mobileNav.classList.remove('mobile-nav-open');

      function toggleMenu() {
        const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
        const newExpanded = !isExpanded;
        
        menuToggle.setAttribute('aria-expanded', newExpanded ? 'true' : 'false');
        mobileNav.setAttribute('aria-hidden', newExpanded ? 'false' : 'true');

        if (newExpanded) {
          mobileNav.classList.add('mobile-nav-open');
        } else {
          mobileNav.classList.remove('mobile-nav-open');
        }
      }

      menuToggle.addEventListener('click', function(e) {
        e.stopPropagation();
        e.preventDefault();
        toggleMenu();
      }, { signal: ac.signal });

      // Close menu when clicking on a link
      const mobileLinks = mobileNav.querySelectorAll('[class*="__mobile-menu-link"], [class*="__mobile-icon"]');
      mobileLinks.forEach(function(link) {
        link.addEventListener('click', function() {
          menuToggle.setAttribute('aria-expanded', 'false');
          mobileNav.setAttribute('aria-hidden', 'true');
          mobileNav.classList.remove('mobile-nav-open');
        }, { signal: ac.signal });
      });

      // Close menu when clicking outside
      document.addEventListener('click', function(event) {
        if (mobileNav.getAttribute('aria-hidden') === 'false' && 
            !menuToggle.contains(event.target) && 
            !mobileNav.contains(event.target)) {
          menuToggle.setAttribute('aria-expanded', 'false');
          mobileNav.setAttribute('aria-hidden', 'true');
          mobileNav.classList.remove('mobile-nav-open');
        }
      }, { signal: ac.signal });
    }

    // Wait for DOM to be ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initMobileMenu, { signal: ac.signal });
    } else {
      // Small delay to ensure all elements are rendered
      setTimeout(initMobileMenu, 100);
    }

    // Search toggle (same as hero-slideshow-header)
    function initSearchToggle() {
      const root = sectionEl;
      const searchToggle = root.querySelector('.hero-header-' + sectionId + '__search-toggle');
      const searchContainer = root.querySelector('.hero-header-' + sectionId + '__search-container');
      const searchInput = root.querySelector('.hero-header-' + sectionId + '__search-input');
      const searchForm = root.querySelector('.hero-header-' + sectionId + '__search-form');
      const searchSuggestions = root.querySelector('.hero-header-' + sectionId + '__search-suggestions');

      if (!searchToggle || !searchContainer || !searchInput) return;

      let searchTimeout = null;
      let highlightedIndex = -1;

      function openSearch() {
        searchContainer.classList.add('search-active');
        searchInput.setAttribute('aria-expanded', 'true');
        searchToggle.setAttribute('aria-expanded', 'true');
        setTimeout(function() { searchInput.focus(); }, 100);
      }

      function closeSearch() {
        searchContainer.classList.remove('search-active');
        searchInput.setAttribute('aria-expanded', 'false');
        searchToggle.setAttribute('aria-expanded', 'false');
        searchInput.value = '';
        hideSuggestions();
      }

      function hideSuggestions() {
        if (searchSuggestions) {
          searchSuggestions.classList.remove('has-results');
          searchSuggestions.innerHTML = '';
          highlightedIndex = -1;
        }
      }

      function showSuggestions(results) {
        if (!searchSuggestions) return;
        if (!results || results.length === 0) {
          searchSuggestions.innerHTML = '<div class="hero-header-' + sectionId + '__search-suggestions-empty">No results found</div>';
          searchSuggestions.classList.add('has-results');
          return;
        }
        var html = '';
        results.slice(0, 8).forEach(function(item, index) {
          var url = item.url || '#';
          var title = item.title || 'Untitled';
          var type = item.type || 'product';
          var imageUrl = item.image || '';
          var price = '';
          if (item.price) price = typeof item.price === 'string' ? item.price : (item.price / 100).toFixed(2);
          var currency = item.currency || '';
          html += '<a href="' + url + '" class="hero-header-' + sectionId + '__search-suggestion-item" data-index="' + index + '">';
          if (imageUrl) {
            html += '<div class="hero-header-' + sectionId + '__search-suggestion-image"><img src="' + imageUrl + '" alt="' + title.replace(/"/g, '&quot;') + '" loading="lazy"></div>';
          }
          html += '<div class="hero-header-' + sectionId + '__search-suggestion-content">';
          html += '<div class="hero-header-' + sectionId + '__search-suggestion-title">' + title + '</div>';
          html += '<div class="hero-header-' + sectionId + '__search-suggestion-type">' + type + '</div>';
          if (price) html += '<div class="hero-header-' + sectionId + '__search-suggestion-price">' + (currency ? currency + ' ' : '') + price + '</div>';
          html += '</div></a>';
        });
        searchSuggestions.innerHTML = html;
        searchSuggestions.classList.add('has-results');
        highlightedIndex = -1;
        searchSuggestions.querySelectorAll('.hero-header-' + sectionId + '__search-suggestion-item').forEach(function(item) {
          item.addEventListener('click', function(e) {
            e.preventDefault();
            window.location.href = item.href;
            closeSearch();
          }, { signal: ac.signal });
        });
      }

      function highlightSuggestion(index) {
        if (!searchSuggestions) return;
        var items = searchSuggestions.querySelectorAll('.hero-header-' + sectionId + '__search-suggestion-item');
        items.forEach(function(item, i) { item.classList.toggle('is-highlighted', i === index); });
        highlightedIndex = index;
        if (items[index]) items[index].scrollIntoView({ block: 'nearest', behavior: 'smooth' });
      }

      function fetchSuggestions(query) {
        if (!query || query.length < 2) { hideSuggestions(); return; }
        var results = [];
        var predictiveUrl = (window.Shopify && window.Shopify.routes && window.Shopify.routes.predictive_search_url ? window.Shopify.routes.predictive_search_url : '/search/suggest') + '?q=' + encodeURIComponent(query) + '&resources[type]=product&resources[limit]=8&section_id=predictive-search';
        fetch(predictiveUrl).then(function(response) {
          if (!response.ok) throw new Error('Predictive failed');
          return response.text();
        }).then(function(html) {
          var parser = new DOMParser();
          var doc = parser.parseFromString(html, 'text/html');
          var section = doc.querySelector('#shopify-section-predictive-search');
          if (section) {
            var productItems = section.querySelectorAll('.predictive-search__list-item[role="option"], li.predictive-search__list-item, .predictive-search__item[href*="/products/"]');
            var seenUrls = new Set();
            productItems.forEach(function(item) {
              var link = item.tagName === 'A' ? item : item.querySelector('a[href*="/products/"]');
              if (!link || !link.href.includes('/products/')) return;
              var url = link.getAttribute('href');
              if (seenUrls.has(url)) return;
              seenUrls.add(url);
              var titleEl = item.querySelector('.predictive-search__item-heading, .predictive-search__item-title, h3, h4, h5, .h5, [class*="heading"], [class*="title"]');
              var priceEl = item.querySelector('.price, .predictive-search__item-price, [class*="price"]');
              var imageEl = item.querySelector('img, .predictive-search__item-image img, [class*="image"] img, .predictive-search__item-image-picture img, picture img');
              var title = titleEl ? titleEl.textContent.trim() : link.textContent.trim() || 'Product';
              var imageUrl = '';
              if (imageEl) {
                imageUrl = imageEl.getAttribute('src') || imageEl.getAttribute('data-src') || '';
                if (imageUrl && imageUrl.startsWith('//')) imageUrl = 'https:' + imageUrl;
                else if (imageUrl && imageUrl.startsWith('/')) imageUrl = window.location.origin + imageUrl;
              }
              if (title && title !== 'Product') {
                results.push({ title: title, url: url, type: 'product', price: priceEl ? priceEl.textContent.trim() : '', image: imageUrl });
              }
            });
          }
          if (results.length > 0) {
            showSuggestions(results);
            return;
          }
          return fetch('/search/suggest.json?q=' + encodeURIComponent(query) + '&resources[type]=product&resources[limit]=8').then(function(r) { return r.ok ? r.json() : {}; }).then(function(data) {
            var res = [];
            if (data && data.resources && data.resources.results && data.resources.results.products) {
              var products = data.resources.results.products;
              res = products.map(function(p) {
                return { title: p.title || 'Product', url: p.url || '#', type: 'product', price: p.price ? (p.price / 100).toFixed(2) : '', currency: p.currency || '', image: p.image || p.featured_image || (p.images && p.images[0]) || '' };
              });
            }
            showSuggestions(res);
          });
        }).catch(function() {
          fetch('/search/suggest.json?q=' + encodeURIComponent(query) + '&resources[type]=product&resources[limit]=8').then(function(r) { return r.ok ? r.json() : {}; }).then(function(data) {
            var res = [];
            if (data && data.resources && data.resources.results && data.resources.results.products) {
              var products = data.resources.results.products;
              res = products.map(function(p) {
                return { title: p.title || 'Product', url: p.url || '#', type: 'product', price: p.price ? (p.price / 100).toFixed(2) : '', currency: p.currency || '', image: p.image || p.featured_image || (p.images && p.images[0]) || '' };
              });
            }
            showSuggestions(res);
          }).catch(function() { hideSuggestions(); });
        });
      }

      searchInput.addEventListener('input', function(e) {
        var query = e.target.value.trim();
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(function() { fetchSuggestions(query); }, 300);
      }, { signal: ac.signal });

      searchInput.addEventListener('keydown', function(e) {
        if (!searchSuggestions || !searchSuggestions.classList.contains('has-results')) return;
        var items = searchSuggestions.querySelectorAll('.hero-header-' + sectionId + '__search-suggestion-item');
        if (e.key === 'ArrowDown') {
          e.preventDefault();
          highlightedIndex = (highlightedIndex + 1) % items.length;
          highlightSuggestion(highlightedIndex);
        } else if (e.key === 'ArrowUp') {
          e.preventDefault();
          highlightedIndex = highlightedIndex <= 0 ? items.length - 1 : highlightedIndex - 1;
          highlightSuggestion(highlightedIndex);
        } else if (e.key === 'Enter' && highlightedIndex >= 0 && items[highlightedIndex]) {
          e.preventDefault();
          window.location.href = items[highlightedIndex].href;
          closeSearch();
        }
      }, { signal: ac.signal });

      searchToggle.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        if (searchContainer.classList.contains('search-active')) closeSearch();
        else openSearch();
      }, { signal: ac.signal });

      document.addEventListener('click', function(e) {
        if (searchContainer.classList.contains('search-active') && !searchContainer.contains(e.target)) closeSearch();
      }, { signal: ac.signal });

      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && searchContainer.classList.contains('search-active')) {
          if (searchSuggestions && searchSuggestions.classList.contains('has-results')) hideSuggestions();
          else closeSearch();
        }
      }, { signal: ac.signal });

      if (searchForm) {
        searchForm.addEventListener('submit', function(e) {
          if (searchInput.value.trim()) closeSearch();
          else e.preventDefault();
        }, { signal: ac.signal });
      }
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', function() { setTimeout(initSearchToggle, 150); }, { signal: ac.signal });
    } else {
      setTimeout(initSearchToggle, 150);
    }

    // Update hero header background color based on product
    (function() {
      // Function to apply color to the page background only (NOT header/header-container)
      function applyHeroHeaderColor(color) {
        if (!color) return;

        // Optional: color the strip/page background (keeps top area consistent)
        sectionEl.style.setProperty('background-color', color, 'important');
        sectionEl.style.setProperty('background', color, 'important');

        // Optional: color the whole page background
        document.documentElement.style.setProperty('background-color', color, 'important');
        document.body.style.setProperty('background-color', color, 'important');

        // DO NOT set header/header-container backgrounds here (keeps dark glass blur)
      }
      
      function updateHeroHeaderBackground() {
        // Only apply on product pages (not home page)
        {% if template.name == 'product' and product %}
          const productHandle = {{ product.handle | json }};
          const mapped = window.productHeaderColors && window.productHeaderColors[productHandle];
          console.log('[Hero Header] handle:', productHandle, 'mapped color:', mapped);

          if (mapped) {
            applyHeroHeaderColor(mapped);
            return;
          }

          // Fallback: metafield if present
          {% if product.metafields.custom.pgc_header_color and product.metafields.custom.pgc_header_color.value != blank %}
            const mf = {{ product.metafields.custom.pgc_header_color.value | json }};
            if (mf) { 
              applyHeroHeaderColor(mf); 
              return; 
            }
          {% endif %}

          // IMPORTANT: no fallback here - leave header as default dark glass
          return;
        {% else %}
          // Not a product page - use section default or transparent (only affects page background)
          {% unless is_home_page %}
            const fallback = {{ section.settings.background_color | default: 'transparent' | json }};
            if (fallback && fallback !== 'transparent') applyHeroHeaderColor(fallback);
          {% endunless %}
        {% endif %}
      }
      
      // Run on page load
      let hasRun = false;
      function runOnce() {
        if (hasRun) return;
        hasRun = true;
        
        // Ensure productHeaderColors is initialized
        if (typeof window.productHeaderColors === 'undefined') {
          window.productHeaderColors = {};
        }
        
        updateHeroHeaderBackground();
      }
      
      // Wait for DOM and ensure mapping is available
      function initHeaderColor() {
        // Small delay to ensure the mapping script has run
        setTimeout(function() {
          runOnce();
        }, 100);
      }
      
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initHeaderColor);
      } else {
        initHeaderColor();
      }
      
      // Removed 1000ms setTimeout to prevent flash - only one initialization pass

      // Theme Editor: re-run when section/block changes
      document.addEventListener('shopify:section:load', function(e) {
        if (e.detail && e.detail.sectionId === sectionId) updateHeroHeaderBackground();
      }, { signal: ac.signal });
      document.addEventListener('shopify:section:select', function(e) {
        if (e.detail && e.detail.sectionId === sectionId) updateHeroHeaderBackground();
      }, { signal: ac.signal });
      document.addEventListener('shopify:block:select', function(e) {
        if (e.detail && e.detail.sectionId === sectionId) updateHeroHeaderBackground();
      }, { signal: ac.signal });
    })();
    
    function destroy() {
      document.body.classList.remove('boo-hero-header-overlay');
      ac.abort();
    }

    document.addEventListener('shopify:section:unload', function(e) {
      if (e.detail && e.detail.sectionId === sectionShopifyId) destroy();
    }, { signal: ac.signal });
    
    // Store destroy function for external cleanup if needed
    window.__booHeroHeaders = window.__booHeroHeaders || {};
    window.__booHeroHeaders[sectionId] = { destroy };
  })();
</script>

