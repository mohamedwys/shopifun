{%- liquid
  assign section_id = section.id
  assign logo = section.settings.logo
  assign menu = section.settings.menu
  assign text_color = section.settings.text_color
  
  # Get product header color if on product page
  assign product_header_color = blank
  if template.name == 'product' and product
    if product.metafields.custom.pgc_header_color and product.metafields.custom.pgc_header_color.value != blank
      assign product_header_color = product.metafields.custom.pgc_header_color.value
    endif
  endif
-%}

{%- style -%}
  /* Header height for overlap: first section uses this (base.css) */
  :root, body {
    --header-height: 72px;
  }
  @media screen and (max-width: 768px) {
    :root, body {
      --header-height: 64px;
    }
  }

  .shopify-section[data-section-id="{{ section.id }}"] {
    max-width: none !important;
    margin: 0 !important;
    padding: 0 !important;
  }

  .shopify-section[data-section-id="{{ section.id }}"] .page-width,
  .shopify-section[data-section-id="{{ section.id }}"] .page-width--narrow {
    max-width: none !important;
    margin: 0 !important;
    padding-left: 0 !important;
    padding-right: 0 !important;
  }

  .hero-header-{{ section_id }} {
    position: relative;
    width: 100%;
    max-width: 100%;
    overflow: visible;
    border-radius: 0;
    background: {{ section.settings.background_color | default: 'transparent' }};
  }


  .hero-header-{{ section_id }}__header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    z-index: 9999;
    padding: 0.6rem 0;
    {% if section.settings.transparent_header %}
    background: transparent;
    {% else %}
    background: {{ section.settings.background_color | default: '#000000' }};
    {% endif %}
    border-radius: 0;
    max-width: 100%;
    overflow: visible !important;
    transition: background 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    isolation: isolate;
    will-change: background, transform;
    transform: translateZ(0);
    display: flex;
    align-items: center;
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__header-pill,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__header-pill {
    background: rgba(0,0,0,0.35) !important;
    backdrop-filter: blur(12px) !important;
    -webkit-backdrop-filter: blur(12px) !important;
    border-color: rgba(255,255,255,0.10) !important;
  }

  .hero-header-{{ section_id }}__header.is-stuck {
    {% if section.settings.transparent_header %}
    background: transparent;
    {% else %}
    background: {{ section.settings.background_color | default: '#000000' }};
    {% endif %}
  }

  .hero-header-{{ section_id }},
  .hero-header-{{ section_id }} * {
    box-sizing: border-box;
  }

  .hero-header-{{ section_id }}__header-container {
    width: 100%;
    max-width: 1680px;
    margin: 0 auto;
    padding: 0.35rem 2rem;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 1rem;
    flex-wrap: nowrap;
    overflow: visible !important;
    box-sizing: border-box;
    min-height: 52px;
  }

  @media screen and (max-width: 768px) {
    .hero-header-{{ section_id }}__header-container {
      padding: 0.3rem 1rem;
      box-sizing: border-box;
    }
  }

  .hero-header-{{ section_id }}__logo {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    margin: 0;
    padding: 0;
    margin-right: 1.25rem;
    min-height: 44px;
  }

  .hero-header-{{ section_id }}__logo a {
    display: flex;
    align-items: center;
    line-height: 0;
  }

  .hero-header-{{ section_id }}__logo img {
    max-height: 44px;
    width: auto;
    height: auto;
    object-fit: contain;
    display: block;
    vertical-align: middle;
    transition: filter 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__logo img,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__logo img {
    filter: brightness(0);
  }

  .hero-header-{{ section_id }}__nav {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    min-width: 0;
    flex: 1 1 auto;
  }

  .hero-header-{{ section_id }}__menu {
    display: flex;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 1.25rem;
    flex-wrap: nowrap;
    justify-content: flex-start;
  }

  .hero-header-{{ section_id }}__menu-item {
    margin: 0;
    display: flex;
    align-items: center;
  }

  .hero-header-{{ section_id }}__menu-link {
    color: {{ text_color }};
    text-decoration: none;
    font-size: 15px;
    font-weight: 500;
    letter-spacing: 0.02em;
    line-height: 1.2;
    transition: opacity 0.2s ease;
    display: inline-flex;
    align-items: center;
    white-space: nowrap;

    /* give all links small click padding */
    padding: 0.3rem 0.65rem;
    border-radius: 9999px;
  }

  .hero-header-{{ section_id }}__menu-link:hover {
    opacity: 0.7;
  }

  .hero-header-{{ section_id }}__menu-link.is-active {
    position: relative;
    z-index: 1;
    background: rgba(255,255,255,0.16);
  }

  .hero-header-{{ section_id }}__actions {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-left: auto;
    min-width: 0;
    min-height: 44px;
    overflow: visible;
    position: relative;
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__icon,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__icon {
    color: #000000;
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__icon svg,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__icon svg {
    fill: #000000;
    stroke: #000000;
    color: #000000;
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__icon svg path,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__icon svg path {
    fill: #000000;
    stroke: #000000;
  }

  .hero-header-{{ section_id }}__header-pill {
    display: flex;
    align-items: center;
    padding: 0.25rem 0.6rem;
    border-radius: 9999px;
    background: rgba(0,0,0,0.35);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255,255,255,0.10);
    min-height: 44px;
    box-sizing: border-box;
  }

  .hero-header-{{ section_id }}__icon {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    width: 38px;
    height: 38px;
    border-radius: 9999px;
    background: rgba(0,0,0,0.35);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255,255,255,0.10);
    color: {{ text_color }};
    text-decoration: none;
    transition: opacity 0.2s ease, color 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hero-header-{{ section_id }}__icon:hover {
    opacity: 0.7;
  }

  .hero-header-{{ section_id }}__icon .svg-wrapper {
    width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-header-{{ section_id }}__icon[href*="cart"] {
    width: 38px;
    height: 38px;
    color: {{ text_color }};
  }

  .hero-header-{{ section_id }}__icon[href*="cart"] .svg-wrapper {
    width: 28px;
    height: 28px;
  }

  .hero-header-{{ section_id }}__icon[href*="cart"] svg,
  .hero-header-{{ section_id }}__icon[href*="cart"] svg path {
    fill: {{ text_color }};
    stroke: {{ text_color }};
    color: {{ text_color }};
  }

  .hero-header-{{ section_id }}__icon svg {
    width: 100%;
    height: 100%;
    transition: fill 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                stroke 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                color 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hero-header-{{ section_id }}__cart-badge {
    position: absolute;
    top: 4px;
    right: 4px;
    background: #ffffff;
    color: #000000;
    border-radius: 50%;
    min-width: 14px;
    height: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 9px;
    font-weight: 600;
    padding: 0 2px;
    line-height: 1;
  }

  /* Search (same as hero-slideshow-header) */
  .hero-header-{{ section_id }}__search-container {
    position: relative;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    overflow: visible;
    z-index: 10;
  }

  .hero-header-{{ section_id }}__search-form {
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 0;
    min-width: 0;
    max-width: 300px;
    opacity: 0;
    overflow: visible;
    transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1), opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
    z-index: 10;
    white-space: nowrap;
  }

  .hero-header-{{ section_id }}__search-container.search-active .hero-header-{{ section_id }}__search-form {
    width: 300px;
    min-width: 300px;
    opacity: 1;
    pointer-events: auto;
  }

  @media screen and (max-width: 768px) {
    .hero-header-{{ section_id }}__search-container.search-active .hero-header-{{ section_id }}__search-form {
      width: 250px;
    }
  }

  .hero-header-{{ section_id }}__search-input {
    width: 100%;
    height: 38px;
    padding: 0 1rem;
    border: 2px solid {{ section.settings.border_color | default: 'rgba(255,255,255,0.35)' }};
    border-radius: 9999px;
    background: rgba(0, 0, 0, 0.5);
    color: #ffffff;
    font-size: 14px;
    outline: none;
    transition: border-color 0.2s ease, background 0.2s ease;
    direction: ltr;
    text-align: left;
    line-height: 38px;
    box-sizing: border-box;
  }

  .hero-header-{{ section_id }}__search-input::placeholder {
    color: rgba(255, 255, 255, 0.85);
  }

  .hero-header-{{ section_id }}__search-input:focus {
    border-color: {{ section.settings.border_color | default: 'rgba(255,255,255,0.4)' }};
    background: rgba(0, 0, 0, 0.6);
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__search-input,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__search-input {
    background: rgba(255, 255, 255, 0.95);
    color: #000000;
    border-color: rgba(0, 0, 0, 0.1);
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__search-input::placeholder,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__search-input::placeholder {
    color: rgba(0, 0, 0, 0.5);
  }

  .hero-header-{{ section_id }}__search-suggestions {
    position: absolute;
    top: calc(100% + 0.5rem);
    left: 0;
    right: 0;
    width: 100%;
    max-height: 400px;
    overflow-y: auto;
    background: {{ section.settings.background_color | default: '#000000' }};
    border: 1px solid {{ section.settings.border_color | default: 'rgba(255,255,255,0.2)' }};
    border-radius: 0.8rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    display: none;
    z-index: 10000;
    margin-top: 0.25rem;
    visibility: hidden;
    opacity: 0;
    transition: opacity 0.2s ease, visibility 0.2s ease;
  }

  .hero-header-{{ section_id }}__search-suggestions.has-results {
    display: block;
    visibility: visible;
    opacity: 1;
  }

  .hero-header-{{ section_id }}__search-suggestion-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 1rem;
    color: {{ text_color }};
    text-decoration: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    transition: background 0.2s ease;
    cursor: pointer;
  }

  .hero-header-{{ section_id }}__search-suggestion-image {
    flex-shrink: 0;
    width: 50px;
    height: 50px;
    border-radius: 0.4rem;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.1);
  }

  .hero-header-{{ section_id }}__search-suggestion-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .hero-header-{{ section_id }}__search-suggestion-content {
    flex: 1;
    min-width: 0;
  }

  .hero-header-{{ section_id }}__search-suggestion-item:last-child {
    border-bottom: none;
  }

  .hero-header-{{ section_id }}__search-suggestion-item:hover,
  .hero-header-{{ section_id }}__search-suggestion-item.is-highlighted {
    background: rgba(255, 255, 255, 0.1);
  }

  .hero-header-{{ section_id }}__search-suggestion-title {
    font-size: 14px;
    font-weight: 500;
    margin: 0 0 0.25rem 0;
    color: {{ text_color }};
  }

  .hero-header-{{ section_id }}__search-suggestion-type {
    font-size: 12px;
    opacity: 0.7;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .hero-header-{{ section_id }}__search-suggestion-price {
    font-size: 14px;
    font-weight: 600;
    margin-top: 0.25rem;
    color: {{ text_color }};
  }

  .hero-header-{{ section_id }}__search-suggestions-empty {
    padding: 1rem;
    text-align: center;
    color: rgba(255, 255, 255, 0.6);
    font-size: 14px;
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__search-suggestions,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__search-suggestions {
    background: rgba(255, 255, 255, 0.95);
    border-color: rgba(0, 0, 0, 0.1);
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__search-suggestion-item,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__search-suggestion-item {
    color: #000000;
    border-bottom-color: rgba(0, 0, 0, 0.1);
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__search-suggestion-item:hover,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__search-suggestion-item:hover,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__search-suggestion-item.is-highlighted,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__search-suggestion-item.is-highlighted {
    background: rgba(0, 0, 0, 0.05);
  }

  .hero-header-{{ section_id }}__search-toggle {
    appearance: none;
    -webkit-appearance: none;
    border: 1px solid rgba(255,255,255,0.10);
    background: rgba(0,0,0,0.35);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    font: inherit;
    cursor: pointer;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 38px;
    height: 38px;
    border-radius: 9999px;
    color: {{ text_color }};
  }

  .hero-header-{{ section_id }}__search-toggle:hover {
    opacity: 0.7;
  }

  /* Mobile menu toggle */
  .hero-header-{{ section_id }}__menu-toggle {
    display: none;
    background: rgba(128, 128, 128, 0.2);
    backdrop-filter: blur(10px) saturate(180%);
    -webkit-backdrop-filter: blur(10px) saturate(180%);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 9999px;
    cursor: pointer;
    padding: 0.5rem;
    flex-shrink: 0;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    min-height: 44px;
    color: {{ text_color }};
    margin-left: auto;
  }

  .hero-header-{{ section_id }}__menu-toggle-icon {
    display: flex;
    flex-direction: column;
    gap: 5px;
    width: 24px;
    height: 18px;
  }

  .hero-header-{{ section_id }}__menu-toggle-line {
    width: 100%;
    height: 2px;
    background-color: {{ text_color }};
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1), 
                background-color 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: center;
  }

  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"]) .hero-header-{{ section_id }}__menu-toggle-line,
  .hero-header-{{ section_id }}__header:has(.hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"]) .hero-header-{{ section_id }}__menu-toggle-line {
    background-color: #000000;
  }

  .hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"] .hero-header-{{ section_id }}__menu-toggle-icon .hero-header-{{ section_id }}__menu-toggle-line:nth-child(1) {
    transform: rotate(45deg) translate(7px, 7px);
  }

  .hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"] .hero-header-{{ section_id }}__menu-toggle-icon .hero-header-{{ section_id }}__menu-toggle-line:nth-child(2) {
    opacity: 0;
  }

  .hero-header-{{ section_id }}__menu-toggle[aria-expanded="true"] .hero-header-{{ section_id }}__menu-toggle-icon .hero-header-{{ section_id }}__menu-toggle-line:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -7px);
  }

  .hero-header-{{ section_id }}__mobile-nav {
    display: block !important;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: #ffffff;
    padding: 2rem;
    z-index: 1002;
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    transform: translateY(-20px);
    transition: max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                transform 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                padding 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    will-change: max-height, opacity, transform;
  }

  .hero-header-{{ section_id }}__mobile-nav[aria-hidden="true"] {
    max-height: 0 !important;
    padding-top: 0 !important;
    padding-bottom: 0 !important;
    opacity: 0 !important;
    transform: translateY(-20px) !important;
    visibility: hidden;
    transition: max-height 0.35s cubic-bezier(0.4, 0, 1, 1), 
                opacity 0.3s cubic-bezier(0.4, 0, 1, 1), 
                transform 0.35s cubic-bezier(0.4, 0, 1, 1), 
                padding 0.35s cubic-bezier(0.4, 0, 1, 1),
                visibility 0s linear 0.35s;
  }

  .hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"],
  .hero-header-{{ section_id }}__mobile-nav.mobile-nav-open {
    max-height: 80vh !important;
    padding: 2rem !important;
    opacity: 1 !important;
    transform: translateY(0) !important;
    visibility: visible !important;
    transition: max-height 0.4s cubic-bezier(0, 0, 0.2, 1), 
                opacity 0.4s cubic-bezier(0, 0, 0.2, 1), 
                transform 0.4s cubic-bezier(0, 0, 0.2, 1), 
                padding 0.4s cubic-bezier(0, 0, 0.2, 1),
                visibility 0s linear 0s;
  }

  .hero-header-{{ section_id }}__mobile-menu {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .hero-header-{{ section_id }}__mobile-menu li {
    margin: 0;
    padding: 0;
  }

  .hero-header-{{ section_id }}__mobile-menu-link {
    color: #000000 !important;
    text-decoration: none;
    font-size: 18px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    display: block;
    padding: 1.25rem 0;
    transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1), 
                transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 1 !important;
    transform: translateX(0);
  }

  .hero-header-{{ section_id }}__mobile-nav[aria-hidden="true"] .hero-header-{{ section_id }}__mobile-menu-link {
    opacity: 0 !important;
    transform: translateX(-10px);
  }

  .hero-header-{{ section_id }}__mobile-nav[aria-hidden="false"] .hero-header-{{ section_id }}__mobile-menu-link,
  .hero-header-{{ section_id }}__mobile-nav.mobile-nav-open .hero-header-{{ section_id }}__mobile-menu-link {
    opacity: 1 !important;
    transform: translateX(0);
  }

  .hero-header-{{ section_id }}__mobile-menu-link:hover {
    opacity: 0.6 !important;
  }

  .hero-header-{{ section_id }}__mobile-actions {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding-top: 1.5rem;
    margin-top: 1.5rem;
