{%- comment -%}
  Modern Countdown Timer
  ======================
  Animated flip countdown with custom end date, expiry message, and color schemes.
{%- endcomment -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .modern-countdown {
    text-align: center;
  }
  .modern-countdown__bg {
    background: {{ section.settings.background_color | default: 'var(--color-button, #000)' }};
    color: {{ section.settings.text_color | default: '#ffffff' }};
  }
  .modern-countdown__title {
    font-size: var(--text-2xl);
    font-weight: 700;
    margin: 0 0 var(--space-xs);
    letter-spacing: var(--tracking-tight);
  }
  .modern-countdown__subtitle {
    font-size: var(--text-base);
    opacity: 0.8;
    margin: 0 0 var(--space-2xl);
  }

  .modern-countdown-display {
    display: flex;
    justify-content: center;
    gap: var(--space-lg);
    flex-wrap: wrap;
  }
  @media screen and (max-width: 749px) {
    .modern-countdown-display {
      gap: var(--space-md);
    }
  }

  .modern-countdown-unit {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
  }
  .modern-countdown-unit__value {
    font-size: var(--text-5xl);
    font-weight: 800;
    line-height: 1;
    min-width: 80px;
    padding: var(--space-md) var(--space-lg);
    background: rgba(255,255,255,0.15);
    border-radius: var(--radius-lg);
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(10px);
  }
  @media screen and (max-width: 749px) {
    .modern-countdown-unit__value {
      font-size: var(--text-3xl);
      min-width: 60px;
      padding: var(--space-sm) var(--space-md);
    }
  }
  .modern-countdown-unit__value::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    top: 50%;
    height: 1px;
    background: rgba(0,0,0,0.1);
  }
  .modern-countdown-unit__label {
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: var(--tracking-widest);
    opacity: 0.7;
  }

  .modern-countdown-separator {
    font-size: var(--text-3xl);
    font-weight: 700;
    align-self: center;
    opacity: 0.5;
    padding-bottom: var(--space-xl);
    animation: countdownBlink 1s ease-in-out infinite;
  }
  @keyframes countdownBlink {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 0.1; }
  }

  .modern-countdown__cta {
    margin-top: var(--space-2xl);
  }
  .modern-countdown__cta a {
    display: inline-flex;
    padding: var(--space-md) var(--space-3xl);
    background: rgba(255,255,255,0.2);
    color: inherit;
    border: 2px solid rgba(255,255,255,0.3);
    border-radius: var(--radius-full);
    text-decoration: none;
    font-weight: 600;
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    transition: all var(--duration-fast) var(--ease-out);
    backdrop-filter: blur(10px);
  }
  .modern-countdown__cta a:hover {
    background: rgba(255,255,255,0.3);
    transform: translateY(-2px);
  }

  .modern-countdown__expired {
    font-size: var(--text-xl);
    font-weight: 600;
    opacity: 0.8;
  }

  /* Flip animation */
  .modern-countdown-unit__value.is-flipping {
    animation: countdownFlip 0.4s var(--ease-out);
  }
  @keyframes countdownFlip {
    0% { transform: perspective(200px) rotateX(0); }
    50% { transform: perspective(200px) rotateX(-10deg); }
    100% { transform: perspective(200px) rotateX(0); }
  }
{%- endstyle -%}

<div class="modern-countdown__bg">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="modern-countdown modern-animate animate--fade-up" id="Countdown-{{ section.id }}" data-end-date="{{ section.settings.end_date }}" data-expired-message="{{ section.settings.expired_message | escape }}">
      {%- if section.settings.title != blank -%}
        <h2 class="modern-countdown__title">{{ section.settings.title }}</h2>
      {%- endif -%}
      {%- if section.settings.subtitle != blank -%}
        <p class="modern-countdown__subtitle">{{ section.settings.subtitle | escape }}</p>
      {%- endif -%}

      <div class="modern-countdown-display" id="CountdownDisplay-{{ section.id }}">
        <div class="modern-countdown-unit">
          <div class="modern-countdown-unit__value" id="CountdownDays-{{ section.id }}">00</div>
          <span class="modern-countdown-unit__label">Days</span>
        </div>
        <span class="modern-countdown-separator">:</span>
        <div class="modern-countdown-unit">
          <div class="modern-countdown-unit__value" id="CountdownHours-{{ section.id }}">00</div>
          <span class="modern-countdown-unit__label">Hours</span>
        </div>
        <span class="modern-countdown-separator">:</span>
        <div class="modern-countdown-unit">
          <div class="modern-countdown-unit__value" id="CountdownMinutes-{{ section.id }}">00</div>
          <span class="modern-countdown-unit__label">Minutes</span>
        </div>
        <span class="modern-countdown-separator">:</span>
        <div class="modern-countdown-unit">
          <div class="modern-countdown-unit__value" id="CountdownSeconds-{{ section.id }}">00</div>
          <span class="modern-countdown-unit__label">Seconds</span>
        </div>
      </div>

      {%- if section.settings.button_label != blank -%}
        <div class="modern-countdown__cta">
          <a href="{{ section.settings.button_link }}" class="modern-btn">{{ section.settings.button_label | escape }}</a>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

<script>
  (function() {
    var section = document.getElementById('Countdown-{{ section.id }}');
    if (!section) return;
    var endDate = new Date(section.dataset.endDate).getTime();
    var expiredMsg = section.dataset.expiredMessage;
    var days = document.getElementById('CountdownDays-{{ section.id }}');
    var hours = document.getElementById('CountdownHours-{{ section.id }}');
    var minutes = document.getElementById('CountdownMinutes-{{ section.id }}');
    var seconds = document.getElementById('CountdownSeconds-{{ section.id }}');
    var display = document.getElementById('CountdownDisplay-{{ section.id }}');

    function pad(n) { return n < 10 ? '0' + n : n; }

    function flipIfChanged(el, value) {
      var str = pad(value).toString();
      if (el.textContent !== str) {
        el.textContent = str;
        el.classList.remove('is-flipping');
        void el.offsetWidth;
        el.classList.add('is-flipping');
      }
    }

    function update() {
      var now = Date.now();
      var diff = endDate - now;
      if (diff <= 0) {
        if (expiredMsg) {
          display.innerHTML = '<div class="modern-countdown__expired">' + expiredMsg + '</div>';
        }
        return;
      }
      var d = Math.floor(diff / 86400000);
      var h = Math.floor((diff % 86400000) / 3600000);
      var m = Math.floor((diff % 3600000) / 60000);
      var s = Math.floor((diff % 60000) / 1000);
      flipIfChanged(days, d);
      flipIfChanged(hours, h);
      flipIfChanged(minutes, m);
      flipIfChanged(seconds, s);
      requestAnimationFrame(function() { setTimeout(update, 1000); });
    }

    if (!isNaN(endDate)) update();
  })();
</script>

{% schema %}
{
  "name": "Modern Countdown Timer",
  "tag": "section",
  "class": "section-modern-countdown",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Limited Time Offer"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Don't miss out on these amazing deals"
    },
    {
      "type": "text",
      "id": "end_date",
      "label": "End date",
      "info": "Format: YYYY-MM-DD HH:MM (e.g., 2026-12-31 23:59)",
      "default": "2026-12-31 23:59"
    },
    {
      "type": "text",
      "id": "expired_message",
      "label": "Expired message",
      "default": "This offer has ended!"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 52,
      "unit": "px",
      "label": "Padding top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 52,
      "unit": "px",
      "label": "Padding bottom"
    }
  ],
  "presets": [
    {
      "name": "Modern Countdown Timer"
    }
  ]
}
{% endschema %}
