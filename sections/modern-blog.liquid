{%- comment -%}
  Modern Blog Section
  ===================
  Blog listing with featured post hero, grid/list toggle, category filtering,
  and read time indicators.
{%- endcomment -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .modern-blog__header {
    text-align: center;
    margin-bottom: var(--space-3xl);
  }
  .modern-blog__title {
    font-size: var(--text-4xl);
    font-weight: 700;
    letter-spacing: var(--tracking-tight);
    margin: 0;
  }
  .modern-blog__desc {
    font-size: var(--text-lg);
    opacity: 0.6;
    margin: var(--space-md) 0 0;
  }

  /* Featured Post */
  .modern-blog-featured {
    display: grid;
    gap: var(--space-2xl);
    margin-bottom: var(--space-3xl);
    padding-bottom: var(--space-3xl);
    border-bottom: 1px solid rgba(128,128,128,0.1);
  }
  @media screen and (min-width: 990px) {
    .modern-blog-featured {
      grid-template-columns: 1.2fr 1fr;
      align-items: center;
    }
  }
  .modern-blog-featured__img {
    aspect-ratio: 16/9;
    overflow: hidden;
    border-radius: var(--radius-xl);
  }
  .modern-blog-featured__img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--duration-slow) var(--ease-out);
  }
  .modern-blog-featured:hover .modern-blog-featured__img img {
    transform: scale(1.03);
  }
  .modern-blog-featured__meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    opacity: 0.5;
    margin-bottom: var(--space-md);
  }
  .modern-blog-featured__title {
    font-size: var(--text-3xl);
    font-weight: 700;
    line-height: var(--leading-tight);
    margin: 0 0 var(--space-md);
    letter-spacing: var(--tracking-tight);
  }
  .modern-blog-featured__title a {
    color: inherit;
    text-decoration: none;
  }
  .modern-blog-featured__title a:hover {
    text-decoration: underline;
    text-decoration-thickness: 2px;
    text-underline-offset: 4px;
  }
  .modern-blog-featured__excerpt {
    font-size: var(--text-base);
    opacity: 0.65;
    line-height: var(--leading-relaxed);
    margin: 0 0 var(--space-lg);
  }
  .modern-blog-featured__read {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-sm);
    font-weight: 600;
    color: inherit;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
  }
  .modern-blog-featured__read svg { width: 16px; height: 16px; transition: transform var(--duration-fast) var(--ease-out); }
  .modern-blog-featured__read:hover svg { transform: translateX(4px); }

  /* Tags Filter */
  .modern-blog-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    justify-content: center;
    margin-bottom: var(--space-2xl);
  }
  .modern-blog-tag {
    padding: var(--space-xs) var(--space-lg);
    border: 1px solid rgba(128,128,128,0.2);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: 500;
    text-decoration: none;
    color: inherit;
    transition: all var(--duration-fast) var(--ease-out);
  }
  .modern-blog-tag:hover, .modern-blog-tag.is-active {
    background: var(--color-button, #000);
    color: var(--color-button-text, #fff);
    border-color: var(--color-button, #000);
  }

  /* Article Grid */
  .modern-blog-grid {
    display: grid;
    gap: var(--space-xl);
  }
  @media screen and (min-width: 750px) {
    .modern-blog-grid--grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media screen and (min-width: 990px) {
    .modern-blog-grid--grid {
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    }
  }

  /* Article Card */
  .modern-article-card {
    display: flex;
    flex-direction: column;
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: transform var(--duration-fast) var(--ease-out), box-shadow var(--duration-fast) var(--ease-out);
  }
  .modern-article-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }
  .modern-article-card__img {
    aspect-ratio: 16/10;
    overflow: hidden;
  }
  .modern-article-card__img img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--duration-slow) var(--ease-out);
  }
  .modern-article-card:hover .modern-article-card__img img {
    transform: scale(1.05);
  }
  .modern-article-card__body {
    padding: var(--space-lg);
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  .modern-article-card__meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    font-size: var(--text-xs);
    opacity: 0.5;
    margin-bottom: var(--space-sm);
  }
  .modern-article-card__meta-dot { opacity: 0.3; }
  .modern-article-card__title {
    font-size: var(--text-lg);
    font-weight: 600;
    line-height: var(--leading-snug);
    margin: 0 0 var(--space-sm);
  }
  .modern-article-card__title a {
    color: inherit;
    text-decoration: none;
  }
  .modern-article-card__title a:hover { text-decoration: underline; }
  .modern-article-card__excerpt {
    font-size: var(--text-sm);
    opacity: 0.6;
    line-height: var(--leading-relaxed);
    margin: 0;
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .modern-article-card__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-top: var(--space-md);
  }
  .modern-article-card__tag {
    font-size: var(--text-2xs, 10px);
    padding: 2px var(--space-sm);
    background: rgba(128,128,128,0.08);
    border-radius: var(--radius-full);
    text-decoration: none;
    color: inherit;
  }
{%- endstyle -%}

{%- liquid
  assign posts_per_page = section.settings.posts_per_page
-%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="modern-blog__header modern-animate animate--fade-up">
      <h1 class="modern-blog__title">{{ blog.title | escape }}</h1>
      {%- if blog.articles_count > 0 -%}
        <p class="modern-blog__desc">{{ blog.articles_count }} {{ blog.articles_count | pluralize: 'article', 'articles' }}</p>
      {%- endif -%}
    </div>

    {%- comment -%} Tags Filter {%- endcomment -%}
    {%- if section.settings.show_tags and blog.all_tags.size > 0 -%}
      <div class="modern-blog-tags modern-animate animate--fade-up" data-stagger="2">
        <a href="{{ blog.url }}" class="modern-blog-tag{% unless current_tags %} is-active{% endunless %}">All</a>
        {%- for tag in blog.all_tags -%}
          {%- if current_tags contains tag -%}
            <a href="{{ blog.url }}" class="modern-blog-tag is-active">{{ tag }}</a>
          {%- else -%}
            <a href="{{ blog.url }}/tagged/{{ tag | handleize }}" class="modern-blog-tag">{{ tag }}</a>
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- paginate blog.articles by posts_per_page -%}
      {%- comment -%} Featured Post {%- endcomment -%}
      {%- if section.settings.show_featured_post and paginate.current_page == 1 and blog.articles.size > 0 -%}
        {%- assign featured = blog.articles.first -%}
        {%- assign word_count = featured.content | strip_html | split: ' ' | size -%}
        {%- assign read_time = word_count | divided_by: 200 | at_least: 1 -%}
        <div class="modern-blog-featured modern-animate animate--fade-up" data-stagger="3">
          <div class="modern-blog-featured__img">
            {%- if featured.image -%}
              {{ featured.image | image_url: width: 1200 | image_tag:
                alt: featured.image.alt | default: featured.title,
                widths: '400, 600, 800, 1000, 1200',
                sizes: '(min-width: 990px) 55vw, 100vw',
                loading: 'eager'
              }}
            {%- else -%}
              {{ 'blog-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </div>
          <div>
            <div class="modern-blog-featured__meta">
              {%- if section.settings.show_date -%}
                <time datetime="{{ featured.published_at | date: '%Y-%m-%d' }}">{{ featured.published_at | date: '%B %d, %Y' }}</time>
              {%- endif -%}
              {%- if section.settings.show_read_time -%}
                <span>&middot; {{ read_time }} min read</span>
              {%- endif -%}
            </div>
            <h2 class="modern-blog-featured__title"><a href="{{ featured.url }}">{{ featured.title | escape }}</a></h2>
            {%- if section.settings.show_excerpt and featured.excerpt_or_content != blank -%}
              <p class="modern-blog-featured__excerpt">{{ featured.excerpt_or_content | strip_html | truncatewords: 40 }}</p>
            {%- endif -%}
            <a href="{{ featured.url }}" class="modern-blog-featured__read">
              Read Article
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
            </a>
          </div>
        </div>
      {%- endif -%}

      {%- comment -%} Article Grid {%- endcomment -%}
      <div class="modern-blog-grid modern-blog-grid--{{ section.settings.layout }}">
        {%- assign start_index = 0 -%}
        {%- if section.settings.show_featured_post and paginate.current_page == 1 -%}
          {%- assign start_index = 1 -%}
        {%- endif -%}

        {%- for article in blog.articles offset: start_index -%}
          {%- assign word_count = article.content | strip_html | split: ' ' | size -%}
          {%- assign read_time = word_count | divided_by: 200 | at_least: 1 -%}
          <article class="modern-article-card modern-animate animate--fade-up" data-stagger="{{ forloop.index | modulo: 6 | plus: 1 }}">
            {%- if article.image -%}
              <a href="{{ article.url }}" class="modern-article-card__img">
                {{ article.image | image_url: width: 800 | image_tag:
                  alt: article.image.alt | default: article.title,
                  widths: '300, 400, 600, 800',
                  sizes: '(min-width: 990px) 33vw, (min-width: 750px) 50vw, 100vw',
                  loading: 'lazy'
                }}
              </a>
            {%- endif -%}

            <div class="modern-article-card__body">
              <div class="modern-article-card__meta">
                {%- if section.settings.show_date -%}
                  <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: '%b %d, %Y' }}</time>
                {%- endif -%}
                {%- if section.settings.show_author -%}
                  <span class="modern-article-card__meta-dot">&middot;</span>
                  <span>{{ article.author }}</span>
                {%- endif -%}
                {%- if section.settings.show_read_time -%}
                  <span class="modern-article-card__meta-dot">&middot;</span>
                  <span>{{ read_time }} min</span>
                {%- endif -%}
              </div>

              <h2 class="modern-article-card__title">
                <a href="{{ article.url }}">{{ article.title | escape }}</a>
              </h2>

              {%- if section.settings.show_excerpt and article.excerpt_or_content != blank -%}
                <p class="modern-article-card__excerpt">{{ article.excerpt_or_content | strip_html | truncatewords: 25 }}</p>
              {%- endif -%}

              {%- if section.settings.show_tags and article.tags.size > 0 -%}
                <div class="modern-article-card__tags">
                  {%- for tag in article.tags limit: 3 -%}
                    <a href="{{ blog.url }}/tagged/{{ tag | handleize }}" class="modern-article-card__tag">{{ tag }}</a>
                  {%- endfor -%}
                </div>
              {%- endif -%}
            </div>
          </article>
        {%- endfor -%}
      </div>

      {%- comment -%} Pagination {%- endcomment -%}
      {%- if paginate.pages > 1 -%}
        <div style="display:flex;justify-content:center;gap:var(--space-sm);margin-top:var(--space-3xl)">
          {%- if paginate.previous -%}
            <a href="{{ paginate.previous.url }}" class="modern-btn modern-btn--outline" style="padding:var(--space-sm) var(--space-lg)">&larr; Previous</a>
          {%- endif -%}
          {%- for part in paginate.parts -%}
            {%- if part.is_link -%}
              <a href="{{ part.url }}" style="display:flex;align-items:center;justify-content:center;width:40px;height:40px;border-radius:var(--radius-md);border:1px solid rgba(128,128,128,0.2);text-decoration:none;color:inherit;font-size:var(--text-sm)">{{ part.title }}</a>
            {%- else -%}
              <span style="display:flex;align-items:center;justify-content:center;width:40px;height:40px;border-radius:var(--radius-md);background:var(--color-button,#000);color:var(--color-button-text,#fff);font-size:var(--text-sm);font-weight:600">{{ part.title }}</span>
            {%- endif -%}
          {%- endfor -%}
          {%- if paginate.next -%}
            <a href="{{ paginate.next.url }}" class="modern-btn modern-btn--outline" style="padding:var(--space-sm) var(--space-lg)">Next &rarr;</a>
          {%- endif -%}
        </div>
      {%- endif -%}
    {%- endpaginate -%}
  </div>
</div>

{% schema %}
{
  "name": "Modern Blog",
  "tag": "section",
  "class": "section-modern-blog",
  "settings": [
    {
      "type": "header",
      "content": "Featured Post"
    },
    {
      "type": "checkbox",
      "id": "show_featured_post",
      "default": true,
      "label": "Show featured post hero"
    },
    {
      "type": "header",
      "content": "Grid"
    },
    {
      "type": "range",
      "id": "posts_per_page",
      "min": 3,
      "max": 24,
      "step": 3,
      "default": 9,
      "label": "Posts per page"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        { "value": "grid", "label": "Grid" },
        { "value": "list", "label": "List" }
      ],
      "default": "grid"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "Desktop columns"
    },
    {
      "type": "header",
      "content": "Display"
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "default": true,
      "label": "Show date"
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "default": true,
      "label": "Show author"
    },
    {
      "type": "checkbox",
      "id": "show_read_time",
      "default": true,
      "label": "Show read time"
    },
    {
      "type": "checkbox",
      "id": "show_tags",
      "default": true,
      "label": "Show tags"
    },
    {
      "type": "checkbox",
      "id": "show_excerpt",
      "default": true,
      "label": "Show excerpt"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40,
      "unit": "px",
      "label": "Padding top"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 52,
      "unit": "px",
      "label": "Padding bottom"
    }
  ],
  "presets": [
    {
      "name": "Modern Blog"
    }
  ]
}
{% endschema %}
